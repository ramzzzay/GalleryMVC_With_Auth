
@{
    ViewBag.Title = "Батик";
}

<h2>@ViewBag.Title</h2>

<div class="grid">
    
    @for (int i = 0; i < Directory.GetFiles(Server.MapPath("/Content/images/batik/krivit")).Length; i++)
    {
        <figure class="effect-milo">
            <img src="~/Content/images/batik/krivit/@string.Format("{0}.jpg",i)" alt="img0@i" />
            <figcaption>
                <h2><span>Батик</span></h2>
                <p style="color: red">Автор - Кривит.</p>
                <p style="color: red">Цена - 999$!</p>
                <a href="#">View more</a>
            </figcaption>
        </figure>
    }
</div>
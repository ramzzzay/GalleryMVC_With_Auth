@model IEnumerable<GalleryMVC_With_Auth.Domain.Entities.Picture>
@{
    ViewBag.Title = "Поиск";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.TextBox("value")
    @Html.DropDownList("type", new SelectList(new[] { "Имя", "Тэг", "Категория" }), "Выбрерите язык карты")
    <button type="submit" class="btn btn-default">Поиск</button>
}

@Html.Partial("_GalleryPartial")

@section Scripts {
    @Scripts.Render("~/bundles/galmagic")
}
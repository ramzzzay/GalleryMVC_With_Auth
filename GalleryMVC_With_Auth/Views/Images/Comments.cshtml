@model IEnumerable<GalleryMVC_With_Auth.Domain.Entities.Comment>

<h2>Comments</h2>

@foreach (var item in Model)
{

    <div class="comment">
        <span style="background: #2E2E2E; color: #be4c39; padding: 5px; margin-bottom: 300px;">Написал: @item.User.UserName</span>
        <p>@item.Text</p>
    </div>
}

@using (Html.BeginForm("Comments", "Images", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.FirstOrDefault().Text, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.FirstOrDefault().Text, new { @class = "comment form-control", Name = "Text", id = "Text"})
        </div>
    </div>
    <button type="submit" class="btn btn-default">Отправить</button>
}
